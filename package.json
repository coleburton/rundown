{
  "name": "rundown-mobile",
  "main": "App.tsx",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "send:buddy-update": "node scripts/send-weekly-accountability-email.js",
    "lint": "expo lint",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "check-supabase": "cd supabase/functions && for dir in */; do echo \"Checking $dir...\"; deno check \"$dir/index.ts\" || exit 1; done",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:changed": "jest --onlyChanged"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.2",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-community/hooks": "^100.1.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.21",
    "@shopify/restyle": "^2.4.5",
    "@supabase/supabase-js": "^2.51.0",
    "@types/react-native": "^0.72.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "expo": "53.0.20",
    "expo-auth-session": "^6.2.1",
    "expo-blur": "~14.1.5",
    "expo-constants": "~17.1.7",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-linear-gradient": "^14.1.5",
    "expo-linking": "~7.1.7",
    "expo-router": "^5.1.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.10",
    "expo-web-browser": "~14.2.0",
    "lucide-react-native": "^0.539.0",
    "mixpanel-react-native": "^3.1.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-purchases": "^9.1.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "^15.11.2",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "~13.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.16",
    "lint-staged": "^15.5.2",
    "react-test-renderer": "^19.0.0",
    "typescript": "~5.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix --quiet"
    ],
    "App.tsx": [
      "eslint --fix --quiet"
    ],
    "supabase/functions/**/*.ts": [
      "bash scripts/run-deno-lint.sh",
      "bash scripts/run-deno-check.sh"
    ]
  },
  "private": true
}
